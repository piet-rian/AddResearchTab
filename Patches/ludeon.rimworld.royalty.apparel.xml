		<xpath>//ResearchProjectDef[defName="JumpPack"]/researchViewY</xpath>
		<value>
			<researchViewY>0.70</researchViewY>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>//ResearchProjectDef[defName="Gunlink"]/researchViewX</xpath>
		<value>
			<researchViewX>4.00</researchViewX>
		</value>
