		<xpath>//ResearchProjectDef[defName="CataphractArmor"]/researchViewY</xpath>
		<value>
			<researchViewY>0.70</researchViewY>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>//ResearchProjectDef[defName="JumpPack"]/researchViewX</xpath>
		<value>
			<researchViewX>3.00</researchViewX>
		</value>
	</Operation>
